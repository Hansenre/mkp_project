    <main>
        <section id="buscar">
            <div id="divBusca">
                <img src="./img/search.png" id="btnBusca" alt="Lupa de buscar" />
                <input type="text" id="txtBusca" placeholder="| Buscar uma loja..." />
            </div>
            <div id="divBotao">
                <button>BUSCAR</button>
            </div>
        </section>
        <section id="estabelecimentos">
            <div class="card">
                <a href="./detalheEstabelecimento/">
                    <img src="./img/armazem.png" alt="Armazém antigo de bairro">
                    <div class="container">
                        <p>
                            Armazém do seu Zé - Vendia para seu pai e agora para você
                        </p>
                    </div>
                </a>
            </div>
    
        </section>

