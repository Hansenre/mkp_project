<body>
    <%- include('partials/header') %>

    <section class="barralink">
        <nav id="hamburguer">
            <input type="checkbox" id="check">
            <label for="check">
                <img src="img/menuhamb az.png" alt="menu hamburguer" style="cursor: pointer;" />
            </label>
            <span>Departamentos</span>

            <div class="submenu-hamb">
                <ul>
                    <li><a href="#">Eletroeletrônicos</a></li>
                    <li><a href="#">Utilidades do Lar</a></li>
                    <li><a href="#">Moda</a></li>
                    <li><a href="#">Farmácia</a></li>
                    <li><a href="#">Construção</a></li>
                </ul>
            </div>
        </nav>

        <nav class="navbar">
            <a class="navbar-item2" href="./estabelecimentos"><img src="img/loja-online.png" />Estabelecimentos</a>
            <a class="navbar-item3" href="#"><img src="img/carrinho-de-compras2.png" />Minhas Compras</a>
            <a class="navbar-item4" href="#"><img src="img/ofertaaz.png" />Ofertas</a>
            <a class="navbar-item5" href="#"><img src="img/trofeuaz.png" />Destaques do Mês</a>
